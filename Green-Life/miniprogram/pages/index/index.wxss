.classification_banner {
  width: 100%;
  height: 360rpx;
}

.classification_banner .banner {
  width: 100%;
  height: 100%;
}

.classification_intro {
  margin-top: 40rpx;
}

.classification_intro .intro_title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #00af91;
  margin-bottom: 30rpx;
}

.classification_intro .intro_desc {
  margin: 0 auto;
  width: 90%;
  margin-bottom: 40rpx;
}

.classification_photo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.classification_photo .van-button {
  width: 300rpx;
  font-size: 30rpx;
}

.desc {
  width: 100%;
  height: 1200rpx;
}

.desc_img {
  width: 100%;
  height: 100%;
}